@model X.PagedList.PagedList<Datn_Shared.ViewModels.PostViewModels.PostView>
@using AspNetCore.PaginatedList;
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="~/css/text.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/slidenews.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cardnews.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/article.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/paging.css" asp-append-version="true" />
