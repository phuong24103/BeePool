@model Datn_Shared.ViewModels.CustomerViewModels.CustomerView

@{
    ViewData["Title"] = "EditProfile";
    <link rel="stylesheet" href="~/css/editprofile.css" asp-append-version="true" />
}

<div class="container emp-profile">
    <form asp-controller="Customer" asp-action="UpdateProfile">
        <div class="row" style="margin-right: 1rem;">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="~/images/customers/@Model.Customer.Image" alt="" />
                    @* <div class="file btn btn-lg btn-primary">
                    Thay đổi ảnh
                    <input type="file" name="file" />
                    </div> *@
                </div>
                <div class="profile-work">
                    <p>MUA BÁN</p>
                    <a asp-area="" asp-controller="WishList" asp-action="Index" class="link-text-name">Sản Phẩm Yêu Thích</a><br />
                    <a asp-area="" asp-controller="Cart" asp-action="Index" class="link-text-name">Giỏ Hàng</a><br />
                    <a asp-area="" asp-controller="Bill" asp-action="Bill" class="link-text-name">Hóa Đơn</a>
                </div>
            </div>
            <div class="col-md-8">
                <div class="profile-head">
                    <h5 style="display: contents;">@Model.Customer.UserName</h5>
                    <a asp-area="" asp-controller="Customer" asp-action="Index" class="link-text-name" style="float: right;">Quay lại</a>
                    <p class="proile-rating">RANKINGS : <span>@Model.Customer.Rank.Name</span></p>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <div class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Chỉnh sửa Hồ sơ</div>
                        </li>
                    </ul>
                </div>
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Họ tên</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <div class="input-group flex-nowrap">
                                    <input asp-for="Customer.FullName" name="FullName" type="text" class="form-control" placeholder="Họ tên" aria-label="Họ và tên" aria-describedby="addon-wrapping" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Giới tính</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <div class="input-group flex-nowrap">
                                    <select asp-for="Customer.Gender" name="Gender" class="form-control">
                                        @if (Model.Customer.Gender == 0)
                                        {
                                            <option value="0" selected>Nam</option>
                                            <option value="1">Nữ</option>
                                            <option value="2">Khác</option>
                                        }
                                        else if (Model.Customer.Gender == 1)
                                        {
                                            <option value="0">Nam</option>
                                            <option value="1" selected>Nữ</option>
                                            <option value="2">Khác</option>
                                        }
                                        else
                                        {
                                            <option value="0">Nam</option>
                                            <option value="1">Nữ</option>
                                            <option value="2" selected>Khác</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <div class="input-group flex-nowrap">
                                    <input asp-for="Customer.Email" name="Email" type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="addon-wrapping" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Số điện thoại</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <div class="input-group flex-nowrap">
                                    <input asp-for="Customer.PhoneNumber" name="PhoneNumber" type="text" class="form-control" placeholder="Số điện thoại" aria-label="Số điện thoại" aria-describedby="addon-wrapping" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Ngày tháng năm sinh</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <input asp-for="Customer.DateOfBirth" name="DateOfBirth" type="date" id="start" class="form-control" value="@Model.Customer.DateOfBirth.ToString("yyyy-MM-dd")" min="1920-01-01" max="2015-12-31" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Địa chỉ</label>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group flex-nowrap" style="margin-bottom : 10px">
                                    <input asp-for="Customer.Address" name="Address" type="text" class="form-control" placeholder="Địa chỉ" aria-label="Địa chỉ" aria-describedby="addon-wrapping" required>
                                </div>
                            </div>
                        </div>
                        <div class="my-5" style="text-align: center;">
                            <button type="submit" class="btn btn-success">Xác nhận thay đổi</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
            </div>
        </div>
    </form>
</div>