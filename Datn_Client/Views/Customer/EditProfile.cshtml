@{
    ViewData["Title"] = "EditProfile";
    <link rel="stylesheet" href="~/css/editprofile.css" asp-append-version="true" />
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS52y5aInsxSm31CvHOFHWujqUx_wWTS9iM6s7BAm21oEN_RiGoog" alt="" />
                    <div class="file btn btn-lg btn-primary">
                        Thay đổi ảnh
                        <input type="file" name="file" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        Kshiti Ghelani
                    </h5>
                    <p class="proile-rating">RANKINGS : <span></span></p>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-work">
                    <p>MUA BÁN</p>
                    <a asp-area="" asp-controller="WishList" asp-action="Index">Sản Phẩm Yêu Thích</a><br />
                    <a asp-area="" asp-controller="Cart" asp-action="Index">Giỏ Hàng</a><br />
                    <a asp-area="" asp-controller="Bill" asp-action="Bill">Hóa Đơn</a>
                </div>
            </div>
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Tài khoản</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <div class="input-group flex-nowrap">
                                    <input type="text" class="form-control" placeholder="Tài khoản" aria-label="Tài khoản" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Mật khẩu</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <div class="input-group flex-nowrap">
                                    <input type="text" class="form-control" placeholder="Mật khẩu" aria-label="Mật khẩu" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Mật khẩu mới</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <div class="input-group flex-nowrap">
                                    <input type="text" class="form-control" placeholder="Mật khẩu mới" aria-label="Mật khẩu mới" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Xác nhận mật khẩu</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <div class="input-group flex-nowrap">
                                    <input type="text" class="form-control" placeholder="Xác nhận mật khẩu" aria-label="Xác nhận mật khẩu" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Họ tên</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <div class="input-group flex-nowrap">
                                    <input type="text" class="form-control" placeholder="Họ và tên" aria-label="Họ và tên" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <div class="input-group flex-nowrap">
                                    <input type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Số điện thoại</label>
                            </div>
                            <div class="col-md-6" style="margin-bottom : 10px">
                                <div class="input-group flex-nowrap">
                                    <input type="text" class="form-control" placeholder="Số điện thoại" aria-label="Số điện thoại" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Ngày tháng năm sinh</label>
                            </div>
                            <div class="col-md-6">
                                <input type="date" id="start" name="trip-start" value="2003-05-27" min="1920-01-01" max="2015-12-31" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Địa chỉ</label>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group flex-nowrap" style="margin-bottom : 10px">
                                    <input type="text" class="form-control" placeholder="Địa chỉ" aria-label="Địa chỉ" aria-describedby="addon-wrapping">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12" style = "margin-left : 100px;margin-top : 20px">
                                <button type="button" class="btn btn-success">Xác nhận thay đổi</button>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

