@model Datn_Shared.ViewModels.CustomerViewModels.CustomerView

@{
    ViewData["Title"] = "Index";
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
}

<div class="container emp-profile">
    <form>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="~/images/customers/@Model.Customer.Image" alt="" />
                    <div class="file btn btn-lg btn-primary" title="Tải lên hình ảnh hồ sơ mới" id="uploadButton">
                        Thay Đổi Ảnh
                        <input type="file" name="imageFile" id="imageFileInput" style="display: none;" accept="image/*">
                    </div>
                </div>
                <div class="profile-work">
                    <p>MUA BÁN</p>
                    <a asp-area="" asp-controller="WishList" asp-action="Index" class="link-text-name">Sản Phẩm Yêu Thích</a><br />
                    <a asp-area="" asp-controller="Cart" asp-action="Index" class="link-text-name">Giỏ Hàng</a><br />
                    <a asp-area="" asp-controller="Bill" asp-action="Bill" class="link-text-name">Hóa Đơn</a>
                </div>
            </div>
            <div class="col-md-8">
                <div class="profile-head">
                    <h5 style="display: contents;">@Model.Customer.UserName</h5>
                    <div style="float: right; margin-right: 1rem;">
                        <a asp-area="" asp-controller="Customer" asp-action="EditProfile" class="link-text-name">Chỉnh sửa Hồ sơ</a>
                        <br />
                        <a asp-area="" asp-controller="Customer" asp-action="ChangePassword" class="link-text-name">Thay đổi Mật khẩu</a>
                    </div>
                    @* <h6>
                    (Chức Vụ)
                    </h6> *@
                    <p class="proile-rating">RANKINGS : <span>@Model.Customer.Rank.Name</span></p>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <div class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Hồ sơ</div>
                        </li>
                    </ul>
                </div>
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Họ tên</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Customer.FullName</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Customer.Email</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Số điện thoại</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Customer.PhoneNumber</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Ngày tháng năm sinh</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Customer.DateOfBirth.Day/@Model.Customer.DateOfBirth.Month/@Model.Customer.DateOfBirth.Year</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Địa chỉ</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Customer.Address</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Điểm</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Customer.Point</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="~/js/uploadFile.js"></script>