@model IEnumerable<Datn_Shared.ViewModels.BillViewModels.BillView>
@{
    ViewData["Title"] = "Bill";
    <link rel="stylesheet" href="~/css/text.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bill.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/billstatus.css" asp-append-version="true" />
}
<div class="page" style="margin-bottom : 50px">
    <nav class="page__menu menu">
        <ul class="menu__list r-list">
            <li class="menu__group"><a asp-controller="Bill" asp-action="Bill" class="menu__link r-link text-underlined">Tất Cả</a></li>
            <li class="menu__group"><a asp-controller="Bill" asp-action="BillStatus1" class="menu__link r-link text-underlined">Chờ Xác Nhận</a></li>
            <li class="menu__group"><a asp-controller="Bill" asp-action="BillStatus2" class="menu__link r-link text-underlined">Đã Xác Nhận</a></li>
            <li class="menu__group"><a asp-controller="Bill" asp-action="BillStatus3" class="menu__link r-link text-underlined">Đang Lấy Hàng</a></li>
            <li class="menu__group"><a asp-controller="Bill" asp-action="BillStatus4" class="menu__link r-link text-underlined">Đang Giao Hàng</a></li>
        </ul>
    </nav>
</div>
@foreach (var item in @Model)
{

    <div class="card" style="margin-bottom : 100px">
        <div class="card-body mx-4">
            <div class="wrapper" style="background-color : white">
                <div class="bg"> Bill </div>
                <div class="fg"> Bill </div>
            </div>
            <div class="container">
                <br>
                <div class="row">
                    <div class="col-xl-10" style="text-align : left">
                        <p>Họ và tên</p>
                    </div>
                    <div class="col-xl-2">
                        <p class="float-end">
                            @item.CustomerName
                        </p>
                    </div>
                    <hr>
                    <div class="col-xl-10" style="text-align : left">
                        <p>Sdt</p>
                    </div>
                    <div class="col-xl-2">
                        <p class="float-end">
                            @item.CustomerPhone
                        </p>
                    </div>
                    <hr>
                    <div class="col-xl-10" style="text-align : left">
                        <p>Địa chỉ</p>
                    </div>
                    <div class="col-xl-2">
                        <p class="float-end">
                            @item.Address
                        </p>
                    </div>
                    <hr>
                    <div class="col-xl-10" style="text-align : left">
                        <p>Ngày tạo</p>
                    </div>
                    <div class="col-xl-2">
                        <p class="float-end">
                            @item.CreateDate
                        </p>
                    </div>
                    <hr>
                    @*<div class="col-xl-10" style="text-align : left">
                        <p>Trạng thái</p>
                        </div>
                        <div class="col-xl-2">
                        <p class="float-end">
                        @item.BillStatus.Name
                        </p>
                        </div>
                        <hr>
                        <div class="col-xl-10" style="text-align : left">
                        <p>Phương thức thanh toán</p>
                        </div>
                        <div class="col-xl-2">
                        <p class="float-end">
                        @item.Payment.Name
                        </p>
                        </div>
                        <hr>*@
                </div>
                <div class="row text-black">

                    <div class="col-xl-12">
                        <p class="float-end fw-bold">
                            Tổng tiền: @item.Price
                        </p>
                    </div>
                    <div class="text-center" style="margin-top: 30px;margin-bottom : 30px">
                        <a asp-controller="BillDetails" asp-action="BillDetails" asp-route-id="@item.Id"> <button class="btn btn-block btn-outline-primary btn-lg" type="button">Hóa đơn chi tiết</button></a>
                    </div>
                    <hr style="border: 2px solid black;">
                </div>

            </div>
        </div>
    </div>
}


