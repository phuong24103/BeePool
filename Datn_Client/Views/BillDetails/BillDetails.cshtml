@model IEnumerable<Datn_Shared.ViewModels.BillDetailViewModels.BillDetailView>

@{
    ViewData["Title"] = "BillDetails";
    <link rel="stylesheet" href="~/css/text.css" asp-append-version="true" />
}
<div class="card" style = "margin-bottom : 100px">
    <div class="card-body">
        <div class="container mb-5 mt-3">
            <div class="row d-flex align-items-baseline">
                <div class="col-xl-9">
                    <p style="color: #7e8d9f;font-size: 20px;">Invoice >> <strong>ID: #123-123</strong></p>
                </div>
                <div class="col-xl-3 float-end">
                    <a class="btn btn-light text-capitalize border-0" data-mdb-ripple-color="dark">
                        <i class="fas fa-print text-primary"></i> Print
                    </a>
                    <a class="btn btn-light text-capitalize" data-mdb-ripple-color="dark">
                        <i class="far fa-file-pdf text-danger"></i> Export
                    </a>
                </div>
                <hr>
            </div>

            <div class="container">
                <div class="col-md-12">
                    <div class="text-center" style="font-weight : bold;">
                        <i class="fab fa-mdb fa-4x ms-0" style="color:#5d9fc5 ;"></i>
                        <div class="wrapper" style="margin-bottom : 20px">
                            <div class="bg"> BillDetails </div>
                            <div class="fg"> BillDetails </div>
                        </div>
                    </div>

                </div>
                @*<div class="row">
                    <div class="col-xl-8">
                    <ul class="list-unstyled">
                    <li class="text-muted">Tên: @item.Bill.Customer.UserName</li>
                    <li class="text-muted">Địa chỉ: <span style="color:#5d9fc5 ;">@item.Bill.Customer.Address</span></li>

                    <li class="text-muted"><i class="fas fa-phone"></i>Số điện thoại: <span style="color:#5d9fc5 ;">@item.Bill.Customer.PhoneNumber</span></li>
                    </ul>
                    </div>
                    <div class="col-xl-4">
                    <p class="text-muted">Thông Tin</p>
                    <ul class="list-unstyled">
                    <li class="text-muted">
                    <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">ID:</span>#123-456
                    </li>
                    <li class="text-muted">
                    <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">Creation Date: @item.Bill.CreateDate</span>
                    </li>
                    <li class="text-muted">
                    <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="me-1 fw-bold">Status:</span><span class="badge bg-warning text-black fw-bold">
                    @item.Bill.BillStatus.Name
                    </span>
                    </li>
                    </ul>
                    </div>
                    </div>*@

                <div class="row my-2 mx-1 justify-content-center">
                    <table class="table table-striped table-borderless">
                        <thead style="background-color:#84B0CA ;" class="text-white">
                            <tr>
                                <th scope="col">Sản Phẩm</th>
                                <th scope="col">Số Lượng</th>
                                <th scope="col">Giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @Model)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <hr>
                <div class="row">
                    <div class="col-xl-10">
                        <p>(Lời Cảm Ơn)</p>
                    </div>
                    <div class="col-xl-2">
                        <button type="button" class="btn btn-primary text-capitalize"
                                style="background-color:#60bdf3 ;">
                            Thanh Toán
                        </button>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>



