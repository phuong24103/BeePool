                                        <span>Hôm nay</span>
                                    }
                                    else if (ViewBag.DateTotalCustomer == "thisMonth")
                                    {
                                        <span>Tháng này</span>
                                    }
                                    else if (ViewBag.DateTotalCustomer == "thisYear")
                                    {
                                        <span>Năm nay</span>
                                    }
                                    else
