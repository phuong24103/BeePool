@model IEnumerable<Datn_Shared.ViewModels.ProductViewModels.ProductView>
@using Datn_Shared.Models;
@using Datn_Shared.ViewModels.ProductViewModels;

@{
    ViewData["Title"] = "Index";
    var cate = (ViewData["a"] as List<Category>);
    var category = (ViewData["p"] as List<ProductView>);
    var bbb = (ViewData["br"] as List<Brand>);
}
<div class="pagetitle">
    <h1>Quản lý sản phẩm</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item active">Tổng quan</li>
            <li class="breadcrumb-item active"> Sản phẩm</li>
        </ol>
    </nav>
</div>
<!-- End Page Title -->

<section class="section dashboard">
    <div class="row">
        <!-- Left side columns -->
        <div class="col-lg-8">
            <div class="row">
                <!-- Recent Sales -->
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">
                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Lọc</h6>
                                </li>

                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Filter" asp-route-date="today">Hôm nay</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Filter" asp-route-date="thisMonth">Tháng này</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Filter" asp-route-date="thisYear">Năm nay</a></li>
                            </ul>
                        </div>
                        <span>
                            | @if (ViewBag.DatePro == "today")
                            {
                                <span>Hôm nay</span>
                            }
                            else if (ViewBag.DatePro == "thisMonth")
                            {
                                <span>Tháng này</span>
                            }
                            else if (ViewBag.DatePro == "thisYear")
                            {
                                <span>Năm nay</span>
                            }
                            else
                            {
                                <span>Toàn bộ</span>
                            }
                        </span>
                        <div class="card-body">
                            <h5 class="card-title">Sản phẩm <span>| </span></h5>

                            <table class="table table-hover datatable">
                                <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Danh mục</th>
                                    <th>Đinh vít</th>
                                    <th>Cán cơ</th>
                                    <th>Vòng</th>
                                    <th>Số lượng tồn</th>
                                    <th>Thương hiệu</th>
                                    <th>Ảnh</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in @Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Pin</td>
                                        <td>@item.Wrap</td>
                                        <td>@item.Rings</td>
                                        <td>@item.AvailableQuantity</td>
                                        <td>@item.BrandName</td>
                                        <td> <img src="/images/products/@item.Image" width="100" height="100" style="object-fit:cover;" /></td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                                <i class="bx bxs-detail"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Bạn chắc chắn có muốn xóa??')" title="Xóa">
                                                <i class="bx bxs-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div><!-- End Recent Sales -->
            </div>

        </div><!-- End Left side columns -->
        <!-- Right side columns -->
        <div class="col-lg-4">

            <!-- Recent Activity -->
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title">Quản lý <span>| xx</span></h5>
                    <!-- Default Tabs -->
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="contact-tab" data-bs-toggle="tab"
                                    data-bs-target="#contact" type="button" role="tab" aria-controls="contact"
                                    aria-selected="false">
                                Chi tiết
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link " id="home-tab" data-bs-toggle="tab"
                                    data-bs-target="#home" type="button" role="tab" aria-controls="home"
                                    aria-selected="true">
                                Cập nhật
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="profile-tab" data-bs-toggle="tab"
                                    data-bs-target="#profile" type="button" role="tab" aria-controls="profile"
                                    aria-selected="false">
                                Tạo mới
                            </button>
                        </li>
                    </ul>

                    @* Update *@
                    <div class="tab-content pt-2" id="myTabContent">
                        <div class="tab-pane fade" id="home" role="tabpanel"
                             aria-labelledby="home-tab">
                            @if (category != null)
                            {
                                <form asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@category.First().Id">
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Sản phẩm</label>
                                        <div class="col-sm-8">
                                            <input asp-for="@category.First().Name" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Danh mục</label>
                                        <div class="col-sm-8">
                                            <select asp-for="@category.First().CategoryID" class="form-select" aria-label="Default select example">
                                                <option selected>Open this select menu</option>
                                                @if (cate != null)
                                                {
                                                    @foreach (var item in cate)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }

                                                }

                                            </select>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Thương hiệu</label>
                                        <div class="col-sm-8">
                                            <select asp-for ="@category.First().BrandID" class="form-select" aria-label="Default select example">
                                                <option selected>Open this select menu</option>
                                                @if (bbb != null)
                                                {
                                                    @foreach (var item in bbb)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }

                                                }

                                            </select>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">
                                            Pin
                                        </label>
                                        <div class="col-sm-8">
                                            <input asp-for="@category.First().Pin" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">
                                            wrap
                                        </label>
                                        <div class="col-sm-8">
                                            <input asp-for="@category.First().Wrap" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">
                                            rings
                                        </label>
                                        <div class="col-sm-8">
                                            <input asp-for="@category.First().Rings" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">
                                            avali
                                        </label>
                                        <div class="col-sm-8">
                                            <input asp-for="@category.First().AvailableQuantity" type="text" class="form-control" />
                                        </div>
                                    </div> 
                                     
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">
                                            Description
                                        </label>
                                        <div class="col-sm-8">
                                            <input asp-for="@category.First().Description" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Status</label>
                                        <div class="col-sm-8">
                                            <select asp-for="@category.First().Status" class="form-select" aria-label="Default select example">
                                                <option selected>Open this select menu</option>
                                                <option value="0">Còn hàng</option>
                                                <option value="1">Hết hàng</option>
                                                <option value="2">Ngừng bán</option>
                                            </select>
                                        </div>
                                    </div>

                                    <button class="btn btn-warning" onclick="return confirm('Xác nhận để lưu thay đổi')" title="Cập nhật">Lưu</button>
                                </form>
                            }
                        </div>

                        @* Create *@
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <form asp-area="Admin" asp-controller="Product" asp-action="Create" enctype="multipart/form-data">
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Name</label>
                                    <div class="col-sm-8">
                                        <input name="Name" type="text" class="form-control" value="" />
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Tên danh mục</label>
                                    <div class="col-sm-8">
                                        <select name="CategoryId" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            @if (cate != null)
                                            {
                                                @foreach (var item in cate)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }

                                            }

                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Tên thương hiệu</label>
                                    <div class="col-sm-8">
                                        <select name="BrandId" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            @if (bbb != null)
                                            {
                                                @foreach (var item in bbb)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }

                                            }

                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Đinh vít</label>
                                    <div class="col-sm-8">
                                        <input name="Pin" type="text" class="form-control" value="" />
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Cán cơ</label>
                                    <div class="col-sm-8">
                                        <input name="Wrap" type="text" class="form-control" value="" />
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Vòng</label>
                                    <div class="col-sm-8">
                                        <input name="Rings" type="text" class="form-control" value="" />
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Số lượng tồn</label>
                                    <div class="col-sm-8">
                                        <input name="AvailableQuantity" type="text" class="form-control" value="" />
                                    </div>
                                </div>   
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Mô tả</label>
                                        <div class="col-sm-8">
                                            <input name="Description" type="text" class="form-control" value="" />
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Trạng thái</label>
                                        <div class="col-sm-8">
                                            <select name="Status" class="form-select" aria-label="Default select example">
                                                <option selected>Open this select menu</option>
                                                <option value="0">Còn hàng</option>
                                                <option value="1">Hết hàng</option>
                                            </select>
                                        </div>
                                    </div>

                                <button class="btn btn-success" onclick="return confirm('Xác nhận để thêm sản phẩm')" title="Thêm">Thêm</button>
                            </form><!-- End Multi Columns Form -->
                        </div>

                        @* Detail *@
                        <div class="tab-pane fade show active" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                            @if (category != null)
                            {
                                <div class="row">
                                    <label class="col-sm-4 col-form-label">
                                        <p>Sản phẩm</p>
                                        <p>Danh mục</p>
                                        <p>Đinh vít</p>
                                        <p>Cán cơ</p>
                                        <p>Vòng</p>
                                        <p>Số lượng tồn</p>
                                        <p>Lượt bán</p>
                                        <p>Lượt thích</p>
                                        <p>Thương hiệu</p>
                                        <p>Ngày tạo</p>
                                        <p>Mô tả</p>
                                        <span>Trạng thái</span>
                                    </label>
                                    <label class="col-sm-8 col-form-label">
                                        @foreach (var item in category)
                                        {
                                            <p>@item.Name</p>
                                            <p>@item.Category.Name</p>
                                            <p>@item.Pin</p>
                                            <p>@item.Wrap</p>
                                            <p>@item.Rings</p>
                                            <p>@item.AvailableQuantity</p>
                                            <p>@item.Sold</p>
                                            <p>@item.Likes</p>
                                            <p>@item.BrandName</p>
                                            <p>@item.CreateDate</p>
                                            <p>@item.Description</p>

                                            @if (item.Status == 0)
                                            {
                                                <span>Còn hàng</span>
                                            }

                                            else if (item.Status == 1)
                                            {
                                                <span>Hết hàng</span>
                                            }
                                            else
                                            {
                                                <span>Ngừng bán</span>
                                            }
                                        }
                                    </label>
                                </div>
                            }
                        </div>
                    </div><!-- End Default Tabs -->


                </div>

            </div>
        </div><!-- End Recent Activity -->


    </div><!-- End Right side columns -->

</section>