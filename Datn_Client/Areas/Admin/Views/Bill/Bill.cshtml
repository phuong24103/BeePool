@model IEnumerable<Datn_Shared.ViewModels.BillViewModels.BillView>

@{
    ViewData["Title"] = "Bill";
}
<div class="card">
    <div class="card-body">
        <div class="container mb-5 mt-3">
            <div class="container">
                <div class="col-md-12">
                    <div class="text-center" style="font-weight : bold;">
                        <i class="fab fa-mdb fa-4x ms-0" style="color:#5d9fc5 ;"></i>
                        <p class="pt-0"><h3>Quản Lý Bill</h3></p>
                    </div>

                </div>

                <div class="row my-2 mx-1 justify-content-center">
                    <table class="table table-striped table-borderless">
                        <thead style="background-color:#84B0CA ;" class="text-white">
                            <tr>
                                <th scope="col">Tên khách hàng</th>
                                <th scope="col">Địa chỉ</th>
                                <th scope="col">Ngày tạo</th>
                                <th scope="col">Tổng tiền</th>
                                <th scope="col">Trạng thái</th>
                                <th scope="col">Đổi trạng thái</th>
                                <th scope="col">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @Model)
                            {
                                <tr>
                                    <td>@item.Customer.UserName</td>
                                    <td>@item.Address</td>
                                    <td>@item.CreateDate</td>
                                    <td>@item.Price</td>
                                    <td>@item.BillStatus.Name</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Bill" asp-action="UpdateBillStatus" asp-route-id="@item.Id" class="btn btn-success">
                                            <i class="bx bxs-detail"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Bill" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="bx bxs-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <hr>
            </div>
        </div>

    </div>
</div>



