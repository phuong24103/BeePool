                                                {
                                                    <img src="~/images/products/@item2" width="50" />
                                                }
                                            </td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="ProductDetail" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">
                                                    <i class="bx bxs-detail"></i>
                                                </a>
                                                <a asp-area="Admin" asp-controller="ProductDetail" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Bạn chắc chắn có muốn xóa??')" title="Xóa">
