@model IEnumerable<Datn_Shared.ViewModels.ProductDetailViewModels.ViewProductDetail>
@using Datn_Shared.Models;
@using Datn_Shared.ViewModels.ProductDetailViewModels;
@using Datn_Shared.ViewModels.ProductViewModels;

@{
    ViewData["Title"] = "Index";
    var tip = (ViewData["t"] as List<Tip>);
    var shaft = (ViewData["s"] as List<Shaft>);
    var weight = (ViewData["w"] as List<Weight>);
    var productdt = (ViewData["pdt"] as List<ViewProductDetail>);
    var category = (ViewData["p"] as List<ProductView>);


}
<div class="pagetitle">
    <h1>Quản lý sản phẩm chi tiết</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item active">Tổng quan</li>
            <li class="breadcrumb-item active">Danh mục</li>
        </ol>
    </nav>
</div>
<!-- End Page Title -->

<section class="section dashboard">
    <div class="row">
        <!-- Left side columns -->
        <div class="col-lg-8">
            <div class="row">
                <!-- Recent Sales -->
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">

                        <div class="card-body">
                            <h5 class="card-title">Sản phẩm <span>| </span></h5>

                            <table class="table table-hover datatable">
                                <tr>
                                    <td>tên Sản phẩm</td>
                                    <td>Tên tip</td>
                                    <td>Tên shaft</td>
                                    <td>Tên weight</td>
                                    <td>Quantity</td>
                                    <td>ImportPrice</td>
                                    <td>Price</td>
                                    <td>CreateDate</td>
                               
                                  @*   <td>Ảnh</td> *@
                                    <td>Trạng thái</td>
                                    <td>ảnh</td>
                                    
                                </tr>
                                @foreach (var item in @Model)
                                {
                                    <tr>
                                        <td>@item.Product.Name</td>
                                        <td>@item.Tip.Name</td>
                                        <td>@item.Shaft.Name</td>
                                        <td>@item.Weight.Name</td>
                                        <td>@item.Quantity</td>
                                        
                                        <td>@item.ImportPrice</td>
                                        <td>@item.Price</td>
                                       
                                        <td>@item.CreateDate</td>
                             
                                        @*  <td>@item.I</td> *@ 
                                        <td>
                                            @if (item.Status == 0)
                                            {
                                                <span>Còn hàng</span>
                                            }
                                            else if (item.Status == 1)
                                            {
                                                <span>Hết hàng</span>
                                            }
                                            else
                                            {
                                                <span>Ngừng bán</span>
                                            }
                                        </td>
                                        <td>
                                            @foreach (var item2 in item.Image)
                                            {
                                                <img src="~/images/products/@item2" width="50" />
                                            }
                                        </td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="ProductDetail" asp-action="Detail"  asp-route-id="@item.Id" class="btn btn-success">
                                                <i class="bx bxs-detail"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="ProductDetail" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="bx bxs-trash-alt"></i>
                                            </a>
                                          
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div><!-- End Recent Sales -->
            </div>

        </div><!-- End Left side columns -->
        <!-- Right side columns -->
        <div class="col-lg-4">

            <!-- Recent Activity -->
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title">Sửa <span>| xx</span></h5>
                    <!-- Default Tabs -->
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="contact-tab" data-bs-toggle="tab"
                                    data-bs-target="#contact" type="button" role="tab" aria-controls="contact"
                                    aria-selected="false">
                                Chi tiết
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link " id="home-tab" data-bs-toggle="tab"
                                    data-bs-target="#home" type="button" role="tab" aria-controls="home"
                                    aria-selected="true">
                                Cập nhật
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="profile-tab" data-bs-toggle="tab"
                                    data-bs-target="#profile" type="button" role="tab" aria-controls="profile"
                                    aria-selected="false">
                                Tạo mới
                            </button>
                        </li>
                    </ul>

                    @* Update *@
                    <div class="tab-content pt-2" id="myTabContent">
                        <div class="tab-pane fade" id="home" role="tabpanel"
                             aria-labelledby="home-tab">
                            @if (productdt != null)
                            {
                                <form asp-area="Admin" asp-controller="ProductDetail" asp-action="Update" asp-route-id="@productdt.First().Id">
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Tên sản phẩm</label>
                                        <select asp-for="@Model.First().ProductID" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            @foreach (var item in category)
                                            {

                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                     
                                       
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Tên tip</label>
                                        <select asp-for="@Model.First().TipId" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            @foreach (var item in tip)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                      
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Tên shaft</label>
                                        <select asp-for="@Model.First().ShaftId" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            @foreach (var item in shaft)
                                            {
                                                <option value="@item.Id">@item.Name </option>
                                            }
                                        </select>
                                      
                                    </div>  
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Tên weight</label>
                                        <select asp-for="@Model.First().WeightId" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            @foreach (var item in weight)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                      
                                    </div>
                                    <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Quantity</label>
                                        <div class="col-sm-8">
                                            <input asp-for="@Model.First().Quantity" type="text" class="form-control" />
                                        </div>
                                    </div>   
                                    <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">des</label>
                                        <div class="col-sm-8">
                                            <input asp-for="@Model.First().Description" type="text" class="form-control" />
                                        </div>
                                    </div> 
                                    
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">ImportPrice</label>
                                        <div class="col-sm-8">
                                            <input asp-for="@Model.First().ImportPrice" type="text" class="form-control" />
                                        </div>
                                    </div>  
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Price</label>
                                        <div class="col-sm-8">
                                            <input asp-for="@Model.First().Price" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Status</label>
                                        <div class="col-sm-8">
                                            <select asp-for="@Model.First().Status" class="form-select" aria-label="Default select example">
                                                <option selected>Open this select menu</option>
                                                <option value="0">Còn hàng</option>
                                                <option value="1">Hết hàng</option>
                                                <option value="2">Ngừng bán</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-sm-4 col-form-label">Ảnh</label>
                                        <div class="col-sm-8">
                                            <input asp-for="@Model.First().Image" type="file" class="form-control" />
                                        </div>
                                    </div>

                                    <button class="btn btn-warning">Lưu</button>
                                </form>
                            }
                        </div>

                        @* Create *@
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <form asp-area="Admin"  asp-controller="ProductDetail" asp-action="Create" enctype="multipart/form-data">
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Tên sản phẩm</label>
                                    <div class="col-sm-8">
                                        <select name="ProductID" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            @if (category != null)
                                            {


                                                @foreach (var item in category)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Tên tip</label>
                                    <div class="col-sm-8">
                                        <select name="TipId" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            @if (tip != null)
                                            {
                                                
                                            @foreach (var item in tip)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                            }

                                        </select>
                                    </div>
                                </div>  
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Tên shaft</label>
                                    <div class="col-sm-8">
                                        <select name="ShaftId" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            @if (shaft !=null)
                                            {
                                                
                                            @foreach (var item in shaft)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                            }

                                        </select>
                                    </div>
                                </div> 
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Tên Weight</label>
                                    <div class="col-sm-8">
                                        <select name="WeightId" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            @if (weight != null)
                                            {
                                                
                                            @foreach (var item in weight)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                            }

                                        </select>
                                    </div>
                                </div>

                               
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Quantity</label>
                                    <div class="col-sm-8">
                                        <input name="Quantity" type="text" class="form-control" value="" />
                                    </div>
                                </div> 
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">descrip</label>
                                    <div class="col-sm-8">
                                        <input name="Description" type="text" class="form-control" value="" />
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">ImportPrice</label>
                                    <div class="col-sm-8">
                                        <input name="ImportPrice" type="text" class="form-control" value="" />
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Price</label>
                                    <div class="col-sm-8">
                                        <input name="Price" type="text" class="form-control" value="" />
                                    </div>
                                </div>
                             
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">Status</label>
                                    <div class="col-sm-8">
                                        <select name="Status" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            <option value="0">Còn hàng</option>
                                            <option value="1">Hết hàng</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label">ảnh</label>
                                    <div class="col-sm-8">
                                        <input name="imageFile" type="file" accept="image/*" class="form-control" multiple="multiple" />
                                    </div>
                                </div>

                                <button class="btn btn-success">Thêm</button>
                            </form><!-- End Multi Columns Form -->
                        </div>

                        @* Detail *@
                        <div class="tab-pane fade show active" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                            @if (productdt != null)
                            {
                                <div class="row">
                                    <label class="col-sm-4 col-form-label">
                                        <p>sản phẩm</p>
                                        <p>Tên tip</p>
                                        <p>Tên shaft</p>
                                        <p>Tên weight</p>
                                        <p>Quantity</p>
                                        <p>ImportPrice</p>
                                        <p>Price</p>
                                        <span>Trạng thái</span>
                                        <p>Ảnh</p>
                                    </label>
                                    <label class="col-sm-8 col-form-label">
                                        @foreach (var item in productdt)
                                        {
                                            <p>@item.Product.Name</p>
                                            <p>@item.Tip.Name</p>
                                            <p>@item.Shaft.Name</p>
                                            <p>@item.Weight.Name</p>
                                            <p>@item.Quantity</p>
                                            <p>@item.ImportPrice</p>
                                            <p>@item.Price</p>
                                            @if (item.Status == 0)
                                            {
                                                <p>Còn hàng</p>
                                            }
                                            else if (item.Status == 1)
                                            {
                                                <p>Hết hàng</p>
                                            }
                                            else
                                            {
                                                <p>Ngừng bán</p>
                                            }
                                            <span>
                                                @foreach (var item2 in item.Image)
                                                {
                                                    <img src="~/images/products/@item2" width="20"  />
                                                }
                                            </span>
                                        }
                                    </label>
                                </div>
                            }
                        </div>
                    </div><!-- End Default Tabs -->


                </div>

            </div>
        </div><!-- End Recent Activity -->


    </div><!-- End Right side columns -->

</section>
