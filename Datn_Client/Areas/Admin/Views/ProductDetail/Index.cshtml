                        <div class="card-body">
                            <h5 class="card-title">Sản phẩm <span>| </span></h5>

                            <table class="table table-hover datatable">
                                <thead>
                                    <tr>
                                        <th>tên Sản phẩm</th>
                                        <th>Tên tip</th>
                                        <th>Tên shaft</th>
                                        <th>weight</th>
                                        <th>ImportPrice</th>
                                        <th>Price</th>
                                        <th>Ảnh</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in @Model)
                                    {
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td>@item.TipName</td>
                                            <td>@item.ShaftName</td>
                                            <td>@item.WeightName</td>
                                            <td>@item.ImportPrice</td>
                                            <td>@item.Price</td>
